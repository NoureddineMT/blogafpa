{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<h1>Produits index</h1>

	<div class="col-10 mx-auto border my-5">
		{% include "flash.html.twig" %}

		{% for produit in produits %}

			<a href="{{path('app_produit_show', { id : produit.id })}}">
				<div class="d-flex produit p-3">

					{% if produit.picture is empty %}
						<img class="col-md-4" src="{{ asset('/uploads/produits/default.jpg') }}" alt="{{produit.name}}" title="{{produit.name}}">
					{% else %}
						<img class="col-md-4" src="{{ asset('/uploads/produits/' ~ produit.picture) }}" alt="{{produit.name}}" title="{{produit.name}}">
					{% endif %}


					<div class="col-md-8 d-flex flex-column ms-3 align-items-start">
						<h3>
							{{produit.name}}
						</h3>
						<p>
							{{produit.description}}
						</p>
						<li>{{produit.price}} â‚¬</li>
						<a class="btn btn-success mb-3 mt-3" href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>

					</div>
				</div>
			</a>

		{% endfor %}

		<div class="row justify-content-center">
			{% if app.user and 'ROLE_ADMIN' in app.user.getroles()  %}
				<a class="my-5 col-md-2 btn btn-success" href="{{ path('app_article_new') }}">Create new</a>
			{% endif %}
		</div>

	</div>

{% endblock %}

